<div class="row">
  <div class="col-8 offset-1">
    <div class="row">
      <div class="col-6">
        <div class="answer">
          {{answer.body}}
        </div>
      </div>
      <div class="col-2 offset-1">
        <div class="post-icons">
          {{#if currentSession.isAuthenticated}}
            {{#if (eq answer.user.email currentSession.user.email)}}
              <a href="" {{action 'deleteAnswer' post.answer}}>{{fa-icon 'trash'}}</a>
            {{/if}}
          {{/if}}
        </div>
      </div>
    </div>
    <div class="row">
      <div class="answer-meta">
        {{answer.user.email}}
      </div>
    </div>

  </div>
</div>