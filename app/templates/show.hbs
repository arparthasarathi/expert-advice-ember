<div class="post-container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="row">
        <div class="col-1">
          <p>Views</p>
        </div>
        <div class="col-6">
          <p>Question</p>
        </div>
        <div class="col-2 offset-1">
          {{#link-to 'index' class='btn btn-primary'}} Back to list {{/link-to}}
        </div>
        <div class="col-2">
          {{#link-to 'ask' class='btn btn-primary'}} Ask a question {{/link-to}}
        </div>
      </div>
    </div>
  </div>
  <div class="remove-border">
    {{post/post-header post=model.post}}
  </div>
  <div class="row">
    <div class="col-8 offset-2">
      <div class="row">
        <div class="col-1">
        </div>
        <div class="col-8">
          <div class="post-description">
            {{model.post.body}}
          </div>
        </div>
      </div>

    </div>
  </div>
  <div class="answer-container row">
    <div class="col-8 offset-2">
      {{answer/answer-form post=model.post}}
      {{#if (gt sortedAnswers.length 0)}}
        <div class="row">
          <div class="answer col-8 offset-1">
            <div class="row">
              <div class="col-6">
                <div class="">Answers:</div>
              </div>
            </div>
          </div>
        </div>
        {{#each sortedAnswers as |answer|}}
          {{answer/answer-content answer=answer }}
        {{/each}}
      {{/if}}
    </div>
  </div>

</div>
